package week3.day3.appcode;

/**
 * 
 * Write a Program called reverse String that takes input as String and returns
 * the reverse of the String and write a test code to test it. Input String=
 * "hello" . It should return the reversed String "olleh"
 *
 */
public class ReverseStringExercise {

	public static String reverseString(String input) {

		String reverse = "";
		char[] ch = input.toCharArray();
		for (int i = ch.length - 1; i >= 0; i--) {
			reverse = reverse + ch[i];
		}
		
		return reverse;
	}

	public static void main(String[] args) {
		
		String input = "hello";

		System.out.println(reverseString(input));
	}

}
